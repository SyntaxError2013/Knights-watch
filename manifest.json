{
  "manifest_version": 2,
  "name": "tabZhub",
  "description": "Save and share tabs",
  "version": "1.0",

 "permissions": [
    "tabs",
    "*://*/*"
  ],

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "icons": ["icon.png"]
  },

  "app": {
    "background": {
      "scripts": ["popup.js"]
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["popup.js"],
      "run_at": "document_start"
    }
  ],

}
